<?xml version='1.0' encoding='utf-8'?>
<widget id="lol.quoteley.gabe" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Quoteley</name>
    <description>Sample Apache Cordova App</description>
    <author email="gabrielgeyrhofer@gmail.com" href="gabriel.at">
        Gabriel Geyrhofer
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <platform name="android">
            <preference name="SplashMaintainAspectRatio" value="true"/>
            <preference name="SplashShowOnlyFirstTime" value="true"/>

            <preference name="AndroidWindowSplashScreenAnimatedIcon" value="www/assets/images/LogoGray_splash.png"/>
            <preference name="AndroidWindowSplashScreenBackground" value="#1e2227"/>

            <splash density="port-ldpi" src="www/img/screen/android/splash-port-ldpi.png"/>
            <splash density="port-mdpi" src="www/img/screen/android/splash-port-mdpi.png"/>
            <splash density="port-hdpi" src="www/img/screen/android/splash-port-hdpi.png"/>
            <splash density="port-xhdpi" src="www/img/screen/android/splash-port-xhdpi.png"/>
            <splash density="port-xxhdpi" src="www/img/screen/android/splash-port-xxhdpi.png"/>
            <splash density="port-xxxhdpi" src="www/img/screen/android/splash-port-xxxhdpi.png"/>
    </platform>


</widget>
